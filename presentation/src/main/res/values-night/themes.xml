<resources>
    <!-- Base application theme. -->
    <style name="Theme.IdealistaChallenge" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/magenta_dark</item>
        <item name="colorPrimaryVariant">@color/green_light</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_dark</item>
        <item name="colorSecondaryVariant">@color/magenta_light</item>
        <item name="colorOnSecondary">@color/black</item> <!-- Text color on secondary color -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>