<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimen_4dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ad_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_8dp"
        android:background="?android:colorBackground"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/thumbnail_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/address_text"
                style="@style/TitleSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/thumbnail_image"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Calle prueba" />

            <TextView
                android:id="@+id/price_text"
                style="@style/TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4dp"
                app:layout_constraintStart_toStartOf="@+id/address_text"
                app:layout_constraintTop_toBottomOf="@+id/address_text"
                tools:text="1000" />

            <TextView
                android:id="@+id/rooms_text"
                style="@style/BodyExtraSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4dp"
                app:layout_constraintStart_toStartOf="@+id/price_text"
                app:layout_constraintTop_toBottomOf="@+id/price_text"
                tools:text="3 hab." />

            <TextView
                android:id="@+id/size_text"
                style="@style/BodyExtraSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_24dp"
                android:layout_marginTop="@dimen/dimen_4dp"
                app:layout_constraintStart_toEndOf="@+id/rooms_text"
                app:layout_constraintTop_toBottomOf="@+id/price_text"
                tools:text="100 m&#178;" />

            <TextView
                android:id="@+id/floor_info_text"
                style="@style/BodyExtraSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_24dp"
                android:layout_marginTop="@dimen/dimen_4dp"
                app:layout_constraintStart_toEndOf="@+id/size_text"
                app:layout_constraintTop_toBottomOf="@+id/price_text"
                tools:text="Planta 1ª" />

            <ImageButton
                android:id="@+id/favorite_image_button"
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/outline_favorite_border_24"
                app:layout_constraintStart_toStartOf="@+id/rooms_text"
                app:layout_constraintTop_toBottomOf="@+id/rooms_text"
                app:tint="?android:colorPrimary" />

            <TextView
                android:id="@+id/favorite_text"
                style="@style/BodySmallBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_4dp"
                app:layout_constraintBottom_toBottomOf="@+id/favorite_image_button"
                app:layout_constraintStart_toEndOf="@+id/favorite_image_button"
                tools:text="Favorito" />

            <TextView
                android:id="@+id/favorite_date_text"
                style="@style/BodyExtraSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4dp"
                app:layout_constraintStart_toStartOf="@+id/favorite_image_button"
                app:layout_constraintTop_toBottomOf="@+id/favorite_text"
                tools:text="Añadido a favoritos el 18/10/2024"
                tools:visibility="visible" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>